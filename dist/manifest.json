{
  "manifest_version": 2,
  "name": "Open links in new tab",
  "description": "A helper extension that causes all links to open in a new tab",
  "version": "1.0",
  "permissions": [
    "storage",
    "tabs",
    "background"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "icon-disabled.png"
    },
    "default_title": "Open Links in New Tab",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["link-helper.js"]
    }
  ]
}